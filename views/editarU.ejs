<%- include('templates/encabezado')%>

<form method="post" action="/editar_usuario/<%= user._id %>">
    <div class="form-group">
      <label for="name">Nombre:</label>
      <input type="text" class="form-control" id="name" name="name" value="<%= user.nombre %>">
    </div>
    <div class="form-group">
      <label for="password">Contrase√±a</label>
      <input type="password" name="password" id="password" placeholder="Password" value="<%= user.password %>">
    </div>
    <div class="form-group">
      <label for="email">Correo</label>
      <input type="email" name="email" id="email" placeholder="Correo" value="<%= user.email %>">
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
  </form>